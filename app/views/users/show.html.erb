<div class="row">
  <div class="col-md-3">
    <div class="center profile-image">
      <%= image_tag avatar_url(@user), class: "avatar-full" %>
      <h4>Email : <%= @user.email %></h4rails>
    </div>
  </div>

  <div class="col-md-9">
    <h2 class="profile-user-name"><%= @user.fullname %></h2>
    <div class="description row-space-3">
      <%= @user.description%>
    </div>
    <h4>Listings (<%= @rooms.length %>)</h4></br>

    <div class="row">
      <% @rooms.each do |room| %>
        <div class="col-md-4">
          <div class="panel panel-primary">
            <div class="panel panel-heading preview">
              <%= image_tag room.cover_photo(:medium)%>
            </div>
            <div class="panel panel-body">
              <%= link_to room.listing_name, room %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

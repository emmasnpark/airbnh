<div class="row">
  <div class="col-md-3">
    <p><%= link_to "Your Houses", rooms_path, class: "sidbar_link" %></p>
    <p><%= link_to "Your Trips", your_trips_path %></p>
    <p><%= link_to "Your reservations", rooms_path %></p>
  </div>

  <div class="col-md-9">
    <h1 class="my_history">My Trips</h1>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-3">
            <p class="text-center">Date</p>
          </div>
          <div class="col-md-6">
            <p class="text-center">House</p>
          </div>
          <div class="col-md-3">
            <p class="text-center">Host</p>
          </div>
        </div>
      </div>
      <div class="panel-body">
        <% @trips.each do |trip| %>
          <div class="row">
            <div class="col-md-3">
              <span class="text-center"><%= trip.start_date.strftime('%d/%m/%y') %> - <%= trip.end_date.strftime('%d/%m/%y') %></span>
            </div>
            <div class="col-md-3">
              <%= link_to room_path(trip.room) do %>
                <%= image_tag trip.room.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-4">
              <%= link_to trip.room.listing_name, rooms_path(trip.room) %>
            </div>
            <div class="col-md-2">
              <%= link_to user_path(trip.room.user) do %>
                <%= image_tag avatar_url(trip.room.user), class:"img-circle avatar-large" %>
              <% end %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>

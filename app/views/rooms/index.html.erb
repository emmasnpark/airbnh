<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Houses", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Trips", your_trips_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <h1 class="my_history">My Houses</h1>
    <div class="panel panel-primary">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">

        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to room_path(room) do %>
                <%= image_tag room.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-6">
              <%= link_to room_path(room) do %>
                <h4><%= room.listing_name %></h4>
              <% end %>
            </div>

            <div class="col-md-2 right">
              <%= link_to "Update", listing_room_path(room), class: "btn btn-form" %>
            </div>
            <div class="col-md-2 right">
              <%= link_to "Show", room_path(room), class: "btn btn-form" %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel panel-heading">Amenities</div>
      <div class="panel panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row form-group">

              <div class="col-md-3">
              <%= f.check_box :is_tv %>TV
              </div>

              <div class="col-md-3">
              <%= f.check_box :is_kitchen %>Kitchen
              </div>

              <div class="col-md-3">
              <%= f.check_box :is_air %>Air conditioning
              </div>
            </div>

            <div class="row form-group">

              <div class="col-md-3">
              <%= f.check_box :is_heating %>Heating
              </div>

              <div class="col-md-3">
              <%= f.check_box :is_internet %>Internet
              </div>

            </div>

            <div class="col-md-1">
              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

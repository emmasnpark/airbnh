<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel panel-heading">Description</div>
      <div class="panel panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row">

              <div class="col-md-6">
                <div class="form-group">
                  <%= f.text_field :listing_name, placeholder: "what is your list name?",
                  class: "form-control" %>
                </div>
              </div>

            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.text_area :summary, rows: 5, placeholder: "summary",
                  class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="col-md-1">
              <div class="text-center">
                <%= f.submit "Save", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
